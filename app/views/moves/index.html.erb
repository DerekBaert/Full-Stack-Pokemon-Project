<p style="color: green"><%= notice %></p>

<p class="title is-2">Moves</p>

<div class="columns is-multiline is-centered">
    <% @moves.each do |move| %>
    <div class="card m-3">
      <div class="card-content">
        <p class="title is-5">
          <%= link_to move.name.capitalize(), move %>
        </p> 
        <p class="subtitle is 5">
          <em><%= move.type.name.capitalize() %></em>
        </p>
      </div>
    </div>
    <% end %>
  </div>

  <%= paginate @moves %>
