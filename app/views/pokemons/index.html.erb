<p style="color: green"><%= notice %></p>

<h1>Pokemon</h1>

<div id="pokemon">
  <% @pokemons.each do |pokemon| %>
    <img src=<%= pokemon.sprite %> alt="image of <%= pokemon.name.capitalize() %>" width="100" height="100">  
    <p>
      <h3>#<%= pokemon.number %> <%= link_to pokemon.name.capitalize(), pokemon %></h3>      
    </p> 
  <% end %>
</div>
