<p style="color: green"><%= notice %></p>

<p class="title is-2">Pokemon</p>

  <div class="columns is-multiline is-centered">
    <% @pokemons.each do |pokemon| %>
    <div class="card m-3">
      <div class="card-image has-text-centered">
        <img src=<%= pokemon.sprite %> alt="image of <%= pokemon.name.capitalize() %>" width="100" height="100">  
      </div>
      <div class="card-content">
        <p class="subtitle is-5">
          #<%= pokemon.number %> <%=link_to pokemon.name.capitalize(), pokemon%>
        </p> 
      </div>
    </div>
    <% end %>
  </div>

